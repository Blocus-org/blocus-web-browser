{
  "name": "blocus-web-browser",
  "version": "0.0.7",
  "description": "Secure web browser with integrated privacy front-end",
  "main": "main.js",
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "src/img/logo-blocus"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "skipUpdateIcon": "true",
            "name": "blocus-web-browser"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {
            "icon": "src/img/logo-blocus",
            "name": "blocus-web-browser"
          }
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {
            "icon": "src/img/logo-blocus",
            "name": "blocus-web-browser"
          }
        }
      ]
    }
  },
  "scripts": {
    "start": "electron-forge start",
    "test": "echo \"Error: no test yet: --WIP-- \" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Zqfd/blocus-web-browser"
  },
  "author": "zqfd",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@electron-forge/cli": "^6.1.1",
    "@electron-forge/maker-deb": "^6.1.1",
    "@electron-forge/maker-squirrel": "^6.1.1",
    "@electron-forge/maker-zip": "^6.1.1",
    "electron": "^24.1.1"
  },
  "dependencies": {
    "@cliqz/adblocker-electron": "^1.26.5",
    "@electron-forge/maker-rpm": "^6.1.1",
    "cross-fetch": "^3.1.5",
    "electron-context-menu": "^3.6.1",
    "electron-tabs": "^1.0.1"
  }
}
